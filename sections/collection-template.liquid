{%- assign limit = 8 -%}

{% paginate collection.products by limit %}

  <div class="collection-template">
    <header class="page-header">
      {% if section.settings.breadcrumbs %}
        {% include 'breadcrumb' %}
      {% else %}
        <h2 class="page-header__title">{{ collection.title }}</h2>
      {% endif %}
    </header>

    <div class="collection-controls grid grid--full">
      <div class="grid__item one-half">
        {% include 'collection-filters' %}
      </div>
      <div class="grid__item one-half">
        {% include 'collection-sorting' %}
      </div>
    </div>

    <div class="page-width">
      <div class="product-list grid">
        {%- assign btn_action = section.settings.btn_action -%}
        {%- assign btn_text = section.settings.btn_text -%}
        {%- assign fade_out_title = section.settings.fade_out_title -%}
        {% for product in collection.products %}
          <div class="grid__item one-half">
            <div class="product-list__item">
              {% include 'product-card' %}
            </div>
          </div>
        {% endfor %}
      </div>

      {% if paginate.pages > 1 %}
        <hr>
        <div class="pagination">
          {{ paginate | default_pagination | replace: '&laquo; Previous', '&larr;' | replace: 'Next &raquo;', '&rarr;' }}
        </div>
      {% endif %}

    </div>

  </div>

{% endpaginate %}

{% schema %}
  {
    "name": "Collection page",
    "settings": [
      {
        "type": "checkbox",
        "id": "breadcrumbs",
        "label": "Display breadcrumbs",
        "default": true
      }
    ]
  }
{% endschema %}
