<div data-section-id="{{ section.id }}" data-section-type="slider-section">

  {% if section.settings.title != blank %}
    <h2 class="text-center section-heading">{{ section.settings.title | escape }}</h2>
  {% endif %}
  <div class="slider-wrapper">
    <div class="collection-list slider" id="slider_{{ section.id }}">
      {% for block in section.blocks limit: section.blocks.size %}
        <div class="collection-list__item slider__slide--{{ block.id }}" {{ block.shopify_attributes }}>
          {%- assign collection = collections[block.settings.collection] -%}
          {% capture collection_title %}{{ collection.title | escape }}{% endcapture %}
          <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}" class="grid__image">
            {% if collection.image %}
              {{ collection.image.src | img_url: '400x400', crop: 'center' | img_tag: collection_title }}
            {% else %}
              {{ collection.products.first.featured_image | img_url: '400x400', crop: 'center' | img_tag: collection_title }}
            {% endif %}
          </a>

          <p class="text-center">
            <a href="{{ collection.url }}" title="{{ 'collections.general.link_title' | t: title: collection_title }}">{{ collection.title }}</a>
          </p>
        </div>
      {% else %}
        <div class="empty-section">
          {{ 'homepage.onboarding.no_collections' | t }}
        </div>
      {% endfor %}
    </div>
  </div>

</div>

{% schema %}
  {
    "name": "Featured collections",
    "class": "section-featured-collections page-width",
    "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Collection list"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "type": "collection",
            "id": "collection",
            "label": "Collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured collections",
        "category": "Products"
      }
    ]
  }
{% endschema %}
