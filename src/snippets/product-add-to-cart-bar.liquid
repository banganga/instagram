
<style media="screen">
.product-add-to-cart-bar{
  background: {{ section.settings.add_to_cart_bar_background_color }};
}

.product-add-to-cart-bar .product-title{
  color: {{ section.settings.add_to_cart_bar_text_color }};
}

.product-add-to-cart-bar .product-price{
  color: {{ section.settings.add_to_cart_bar_price_color }};
}

</style>

<div class="product-add-to-cart-bar small--hide">
  <div class="grid__item">
    <div class="grid">

      <div class="grid__item large--one-half medium--one-third">
        <p class="product-title">{{ product.title }}</p>
      </div>

      <div class="grid__item large--one-quarter medium--one-third">
        <span class="product-price">{{ product.price | money }}</span>
      </div>

      <div class="grid__item large--one-quarter medium--one-third">
        <button  class="btn btn--special product-topbar-add-to-cart">
          <span class="product-form__cart-submit-text" data-original-text="Add to Cart">Add to Cart</span>
        </button>
      </div>

    </div>
  </div>
</div>
