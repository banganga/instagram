<ul class="sf-menu sf-js-enabled sf-arrows  {% if linklists.main-menu.links.size >= 7 %}sf-menu-shrink-x2{% else if linklists.main-menu.links.size >= 5 %}sf-menu-shrink-x1{% endif %}">
  {% for link in linklists.main-menu.links %}
    {% assign child_list_handle = link.title | handleize %}

    {% if linklists[child_list_handle].links != blank %}
    <li{% if link.active %} class="current"{% endif %}>
      <a href="{{ link.url }}">{{ link.title }}</a>
      <ul class="cbp-hssubmenu">
        {% for childlink in linklists[child_list_handle].links %}
          {% if childlink.type == "product_link" %}
          <li>
            <a href="{{ childlink.url }}" alt="{{ childlink.title | escape }}">
              <img src="{{ childlink.object.featured_image | img_url: '160x' }}" alt="{{ childlink.object.title }}">
              <span>
                {{ childlink.title | escape }}<br>
                {% if section.settings.display_product_price %}
                  {%- assign money_price = childlink.object.price | money -%}

                  {% if childlink.object.compare_at_price > childlink.object.price %}
                    <s>{{ childlink.object.compare_at_price | money }}</s>
                    {{ money_price }}
                  {% else %}
                    {{ money_price }}
                  {% endif %}
                {% endif %}
              </span>
            </a>
          </li>
          {% elsif childlink.type == "collection_link" %}
          <li>
            <a href="{{ childlink.url }}" alt="{{ childlink.title | escape }}">
              <img src="{{ childlink.object.image | img_url: '160x' }}" alt="{{ childlink.object.title }}">
              <span>{{ childlink.title | escape }}</span>
            </a>
          </li>
          {% else %}
          <li>
            <a href="{{ childlink.url }}"><span>{{ childlink.title | escape }}</span></a>
          </li>
          {% endif %}
        {% endfor %}
      </ul>
    </li>
    {% else %}
    <li{% if link.active %} class="current"{% endif %}>
      <a href="{{ link.url }}">{{ link.title }}</a>
    </li>
    {% endif %}
  {% endfor %}
</ul>
